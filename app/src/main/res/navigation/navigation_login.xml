<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@+id/nav_language">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.mandiexe.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/login_fragment">

    </fragment>
    <fragment
        android:id="@+id/nav_language"
        android:name="com.example.mandiexe.ui.authUi.LanguageFragment"
        android:label="@string/Language"
        tools:layout="@layout/language_fragment">
        <action
            android:id="@+id/action_nav_language_to_nav_login"
            app:destination="@id/nav_login" />
    </fragment>

</navigation>