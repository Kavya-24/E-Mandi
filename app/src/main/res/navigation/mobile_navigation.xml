<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.mandiexe.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_add_stock_2"
            app:destination="@id/nav_add_stock_2" />
        <action
            android:id="@+id/action_nav_home_to_requirementFragment"
            app:destination="@id/requirementFragment" />
        <action
            android:id="@+id/action_nav_home_to_nav_my_crops2"
            app:destination="@id/nav_my_crops2" />
        <action
            android:id="@+id/action_nav_home_to_addRequirement"
            app:destination="@id/addRequirement" />
        <action
            android:id="@+id/action_nav_home_to_myBidDetails"
            app:destination="@id/myBidDetails" />
        <action
            android:id="@+id/action_nav_home_to_addRequirement2"
            app:destination="@id/addRequirement" />
        <action
            android:id="@+id/action_nav_home_to_myRequirementDetails"
            app:destination="@id/myRequirementDetails" />
    </fragment>

    <fragment
        android:id="@+id/nav_my_crops2"
        android:name="com.example.mandiexe.ui.supply.MySuppliesFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/my_crop_bids_fragment">

        <action
            android:id="@+id/action_nav_my_crops2_to_myBidDetails"
            app:destination="@id/myBidDetails" />
        <action
            android:id="@+id/action_nav_my_crops2_to_nav_add_stock_2"
            app:destination="@id/nav_add_stock_2" />
    </fragment>

    <fragment
        android:id="@+id/nav_supply"
        android:name="com.example.mandiexe.ui.home.FarmerSupplyHistory"
        android:label="@string/mySupplyHistory"
        tools:layout="@layout/farmer_supply_history_fragment" />

    <fragment
        android:id="@+id/nav_bid"
        android:name="com.example.mandiexe.ui.home.FarmerBidHistory"
        android:label="@string/myBidHistory"
        tools:layout="@layout/farmer_bid_history_fragment" />
    <fragment
        android:id="@+id/nav_add_stock_2"
        android:name="com.example.mandiexe.ui.supply.AddStock"
        android:label="AddStock"
        tools:layout="@layout/add_stock_fragment">
        <argument
            android:name="fetchedLocation"
            app:argType="string"
            app:nullable="true" />

    </fragment>
    <fragment
        android:id="@+id/myBidDetails"
        android:name="com.example.mandiexe.ui.supply.MyCropBidDetails"
        android:label="@string/details"
        tools:layout="@layout/my_crop_bid_details_fragment">
        <argument
            android:name="SUPPLY_ID"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/myRequirementDetails"
        android:name="com.example.mandiexe.ui.myrequirements.MyRequirementDetails"
        android:label="MyRequirementDetails"
        tools:layout="@layout/my_requirement_details_fragment">
        <argument
            android:name="BID_ID"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/requirementFragment"
        android:name="com.example.mandiexe.ui.myrequirements.RequirementFragment"
        android:label="RequirementFragment"
        tools:layout="@layout/requirement_fragment">
        <action
            android:id="@+id/action_requirementFragment_to_myRequirementDetails"
            app:destination="@id/myRequirementDetails" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.mandiexe.ui.home.ViewPagerFragment"
        android:label="ViewPagerFragment"
        tools:layout="@layout/viewpager_fragment" />
    <fragment
        android:id="@+id/addRequirement"
        android:name="com.example.mandiexe.ui.myrequirements.AddRequirement"
        android:label="@string/searchBuyers"
        tools:layout="@layout/add_requirement_fragment">
        <action
            android:id="@+id/action_addRequirement_to_openNewRequirementFragment"
            app:destination="@id/openNewRequirementFragment" />
    </fragment>
    <fragment
        android:id="@+id/openNewRequirementFragment"
        android:name="com.example.mandiexe.ui.myrequirements.OpenNewRequirementFragment"
        android:label="OpenNewRequirementFragment"
        tools:layout="@layout/open_new_requirement_fragment">
        <argument
            android:name="BID_ID"
            app:argType="string" />
    </fragment>
</navigation>