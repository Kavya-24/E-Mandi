<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.mandiexe.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_addStock"
            app:destination="@id/addStock" />
    </fragment>

    <fragment
        android:id="@+id/nav_my_crops"
        android:name="com.example.mandiexe.ui.home.MyCropBidsFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/my_crop_bids_fragment" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.mandiexe.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.mandiexe.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/addStock"
        android:name="com.example.mandiexe.ui.home.AddStock"
        android:label="AddStock"
        tools:layout="@layout/add_stock_fragment">
        <action
            android:id="@+id/action_addStock_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_addStock_to_mapActivity"
            app:destination="@id/mapActivity" />
        <argument
            android:name="fetchedLocation"
            app:argType="string"
            app:nullable="true" />

    </fragment>
    <fragment
        android:id="@+id/mapActivity"
        android:name="com.example.mandiexe.ui.home.MapActivity"
        android:label="Map"
        tools:layout="@layout/map_fragment">
        <action
            android:id="@+id/action_mapActivity_to_addStock"
            app:destination="@id/addStock" />

    </fragment>
</navigation>