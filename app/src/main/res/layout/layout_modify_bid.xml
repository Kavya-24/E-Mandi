<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space"
    android:padding="@dimen/space">

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space"
        android:layout_marginTop="@dimen/space_2x"
        android:layout_marginEnd="@dimen/space"
        android:layout_marginBottom="@dimen/space"
        android:padding="@dimen/space"
        android:text="@string/myCurrentBid"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space"
        android:text="@string/rs"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/tvQuantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvQuantity" />

    <EditText
        android:id="@+id/numberPickerModifyPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_margin="@dimen/space"
        app:layout_constraintEnd_toStartOf="@id/tv_rs"
        app:layout_constraintTop_toTopOf="@id/tvQuantity"
        app:layout_constraintBottom_toBottomOf="@id/tvQuantity"
        app:layout_constraintStart_toEndOf="@id/tvQuantity" />

    <TextView
        android:id="@+id/tvIncDec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space"
        android:padding="@dimen/space"
        app:layout_constraintTop_toBottomOf="@id/tvQuantity" />

</androidx.constraintlayout.widget.ConstraintLayout>