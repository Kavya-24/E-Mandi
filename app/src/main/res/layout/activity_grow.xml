<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/growth_container_grow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        tools:actionBarNavMode="standard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_3x"
            android:paddingBottom="@dimen/space_3x"
            tools:context=".ui.supply.GrowActivity">

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/growth_tilWhichCrop"
                style="@style/styleTIL"
                android:hint="@string/which_crop"
                app:layout_constraintEnd_toStartOf="@id/growth_mic_crop_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <AutoCompleteTextView
                    android:id="@+id/growth_actv_which_crop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/growth_mic_crop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@drawable/ic_mic_black_24dp"
                android:tint="@color/red_A700"
                app:layout_constraintBottom_toBottomOf="@id/growth_tilWhichCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/growth_tilWhichCrop" />


            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/growth_tilCropType"
                style="@style/styleTIL"
                android:hint="@string/crop_type"
                app:layout_constraintEnd_toStartOf="@id/growth_mic_crop_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/growth_tilWhichCrop">


                <AutoCompleteTextView
                    android:id="@+id/growth_actv_crop_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/growth_mic_crop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@drawable/ic_mic_black_24dp"
                android:tint="@color/red_A700"
                app:layout_constraintBottom_toBottomOf="@id/growth_tilCropType"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/growth_tilCropType" />


            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/growth_tilQuantity"
                style="@style/OutlinedTextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:hint="@string/quantity"
                android:orientation="horizontal"
                app:endIconMode="none"
                app:layout_constraintEnd_toStartOf="@id/growth_tv_kg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/growth_tilCropType">


                <EditText
                    android:id="@+id/growth_actv_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/growth_tv_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:text="@string/kg"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/growth_tilQuantity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/growth_tilQuantity" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/growth_tilSowDate"
                style="@style/OutlinedTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/growth_tilQuantity">

                <EditText
                    android:id="@+id/growth_etSowDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/dateOfSowing" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/growth_tilEstDate"
                style="@style/OutlinedTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/growth_tilSowDate">

                <EditText
                    android:id="@+id/growth_etEstDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/estimated_time_of_completion" />
            </com.google.android.material.textfield.TextInputLayout>

