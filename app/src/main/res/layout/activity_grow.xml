            <!--        <ImageView-->
            <!--            android:id="@+id/growth_iv_location"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_margin="@dimen/space"-->
