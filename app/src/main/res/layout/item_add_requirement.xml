            <TextView
                android:id="@+id/tv_add_requirement_crop_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Rice" />


            <TextView
                android:id="@+id/tv_add_requirement_crop_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginTop="@dimen/space_half"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_requirement_crop_name"
                tools:text="Bihta, Amhara" />

            <ImageView
                android:id="@+id/iv_req_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@drawable/ic_above"
                app:layout_constraintBottom_toBottomOf="@id/tv_add_requirement_crop_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_my_req_delta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:text="@string/delta"
                android:textColor="@color/green_A700"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_add_requirement_crop_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_req_image" />

            <TextView
                android:id="@+id/tv_add_requirement_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:text="@string/quantity2"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_requirement_crop_location" />

            <TextView
                android:id="@+id/ans_crop_quanity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:text="@string/_0_kg"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_add_requirement_quantity"
                app:layout_constraintStart_toEndOf="@id/tv_add_requirement_quantity"
                app:layout_constraintTop_toTopOf="@id/tv_add_requirement_quantity" />

            <TextView
                android:id="@+id/tv_add_requirement_expiration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:text="@string/expiration_date"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_requirement_quantity" />

            <TextView
                android:id="@+id/ans_crop_exp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:text="@string/_12_4_2005"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_add_requirement_expiration"
                app:layout_constraintStart_toEndOf="@id/tv_add_requirement_expiration"
                app:layout_constraintTop_toTopOf="@id/tv_add_requirement_expiration" />

            <TextView
                android:id="@+id/tv_add_requirement_current_bid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_half"
                android:gravity="center"
                android:text="@string/_1234"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/tv_add_requirement_initial_offer_price"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_add_requirement_expiration" />

            <TextView
                android:id="@+id/tv_add_requirement_initial_offer_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_half"
                android:gravity="center"
                android:text="@string/_1234"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/tv_add_requirement_current_bid"
                app:layout_constraintTop_toBottomOf="@id/tv_add_requirement_expiration" />


            <TextView
