<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space"
        android:elevation="@dimen/space"
        app:cardCornerRadius="@dimen/space_half">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:background="@color/white"
            android:padding="@dimen/space_half">

            <TextView
                android:id="@+id/tv_Bid_crop_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Rice" />


            <TextView
                android:id="@+id/tv_Bid_crop_location_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginTop="@dimen/space_half"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_Bid_crop_name"
                tools:text="Bihta, Amhara" />

            <ImageView
                android:id="@+id/iv_bid_history_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@drawable/ic_above"
                app:layout_constraintBottom_toBottomOf="@id/tv_Bid_crop_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_my_req_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:maxLines="2"
                android:text="@string/delta"
                android:textColor="@color/deltaGreen"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_bid_history_image" />

            <TextView
                android:id="@+id/tv_Bid_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:text="@string/quantity2"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_Bid_crop_location_history" />

            <TextView
                android:id="@+id/ans_crop_quanity_bid_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:text="@string/_0_kg"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_Bid_quantity"
                app:layout_constraintStart_toEndOf="@id/tv_Bid_quantity"
                app:layout_constraintTop_toTopOf="@id/tv_Bid_quantity" />

            <TextView
                android:id="@+id/tv_Bid_expiration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:text="@string/expiration_date"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_Bid_quantity" />

            <TextView
                android:id="@+id/ans_crop_exp_bid_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:text="@string/_12_4_2005"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_Bid_expiration"
                app:layout_constraintStart_toEndOf="@id/tv_Bid_expiration"
                app:layout_constraintTop_toTopOf="@id/tv_Bid_expiration" />

            <TextView
                android:id="@+id/tv_Bid_current_bid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_half"
                android:gravity="center"
                android:text="@string/_1234"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@id/tv_Bid_initial_offer_price"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_Bid_expiration" />

            <TextView
                android:id="@+id/tv_Bid_initial_offer_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_half"
                android:gravity="center"
                android:text="@string/_1234"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/tv_Bid_current_bid"
                app:layout_constraintTop_toBottomOf="@id/tv_Bid_expiration" />

            <TextView
                android:id="@+id/tv_Bid_my_bid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_half"
                android:gravity="center"
                android:text="@string/_1234"
                android:textColor="@android:color/holo_red_light"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@id/tv_Bid_current_bid"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@id/tv_Bid_current_bid"
                app:layout_constraintTop_toBottomOf="@id/tv_Bid_current_bid" />

            <TextView
                android:id="@+id/tv_Bid_last_upadted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_half"
                android:gravity="end"
                android:text="@string/_12_4_2005"
                app:layout_constraintTop_toBottomOf="@id/tv_Bid_my_bid" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="@dimen/space_half"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>