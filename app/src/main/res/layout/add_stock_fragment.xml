<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgGreen"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container_add_stock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        tools:actionBarNavMode="standard">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:paddingBottom="@dimen/space_3x"
            tools:context=".ui.supply.AddStock">

            <TextView
                android:id="@+id/tvTempCropName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/temp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTempCropType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/temp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/tilWhichCrop"
                style="@style/styleTIL"
                android:hint="@string/which_crop"
                app:layout_constraintEnd_toStartOf="@id/mic_crop_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <AutoCompleteTextView
                    android:id="@+id/actv_which_crop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/mic_crop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@drawable/ic_mic_black_24dp"
                android:tint="@color/deltaRed"
                app:layout_constraintBottom_toBottomOf="@id/tilWhichCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tilWhichCrop" />

            <ProgressBar
                android:id="@+id/pb_add_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/tilCropType"
                style="@style/styleTIL"
                android:hint="@string/crop_type"
                app:layout_constraintEnd_toStartOf="@id/mic_crop_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilWhichCrop">


                <AutoCompleteTextView
                    android:id="@+id/actv_crop_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/mic_crop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:src="@drawable/ic_mic_black_24dp"
                android:tint="@color/deltaRed"
                app:layout_constraintBottom_toBottomOf="@id/tilCropType"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tilCropType" />


            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/tilQuantity"
                style="@style/OutlinedTextBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:hint="@string/quantity"
                android:orientation="horizontal"
                app:endIconMode="none"
                app:layout_constraintEnd_toStartOf="@id/tv_kg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilCropType">


                <EditText
                    android:id="@+id/actv_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:text="@string/kg"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/tilQuantity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tilQuantity" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEstDate"
                style="@style/OutlinedTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilSowDate">

                <EditText
                    android:id="@+id/etEstDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/estimated_time_of_completion" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSowDate"
                style="@style/OutlinedTextBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilQuantity">

                <EditText
                    android:id="@+id/etSowDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/dateOfSowing" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/mtb_go_to_bidding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/space"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/addThisInBidding"
                app:backgroundTint="@color/colorAccent"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:layout_constraintTop_toBottomOf="@id/tilEstDate" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/mtb_add_without_bidding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/addCropGrowthOnly"
                app:backgroundTint="@color/colorAccent"
                app:icon="@drawable/ic_arrow_forward"
                app:iconGravity="end"
                app:layout_constraintTop_toBottomOf="@id/mtb_go_to_bidding" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>