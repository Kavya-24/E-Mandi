<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space"
        android:elevation="@dimen/space_half"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space_half">

            <TextView
                android:id="@+id/tvTagDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space"
                android:padding="@dimen/space"
                android:textColor="@color/ivory"
                tools:text="500 km" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space"
        android:elevation="@dimen/space_half"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/space"
        app:layout_constraintStart_toEndOf="@id/cvDays"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/space_half">

            <TextView
                android:id="@+id/tvTagDistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/space"
                android:padding="@dimen/space"
                android:textColor="@color/ivory"
                tools:text="500 km" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mtb_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/space"
        android:background="@drawable/ic_filter_list_black_24dp"
        android:elevation="0dp"
        app:elevation="0dp"
        app:iconTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/cvDistance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cvDistance"
        app:layout_constraintTop_toTopOf="@id/cvDistance"
        app:rippleColor="@color/grey" />

</androidx.constraintlayout.widget.ConstraintLayout>