<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/tilDays"
        style="@style/styleTIL2"
        android:layout_margin="@dimen/space_half"
        android:hint="@string/days"
        app:layout_constraintEnd_toStartOf="@id/tilDistance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <AutoCompleteTextView
            android:id="@+id/actv_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

        <requestFocus />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/tilDistance"
        style="@style/styleTIL2"
        android:layout_margin="@dimen/space_half"
        android:hint="@string/distanceKm"
        app:layout_constraintEnd_toStartOf="@id/mtb_filter"
        app:layout_constraintStart_toEndOf="@id/tilDays"
        app:layout_constraintTop_toTopOf="parent">


        <AutoCompleteTextView
            android:id="@+id/actv_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/mtb_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/space"
        android:background="@drawable/ic_filter_list_black_24dp"
        android:elevation="0dp"
        app:elevation="0dp"
        app:iconTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tilDistance"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/grey" />

</androidx.constraintlayout.widget.ConstraintLayout>