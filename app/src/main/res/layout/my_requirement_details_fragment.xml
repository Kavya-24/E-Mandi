<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swl_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/container_req_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:background="@color/bgGreen"
            tools:context=".ui.supply.MyCropBidDetails">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mLayoutReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space"
                android:padding="@dimen/space"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_requirement_detail_crop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Rice" />

                <TextView
                    android:id="@+id/mDetQuantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/variety"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_requirement_detail_crop_name" />

                <TextView
                    android:id="@+id/tv_requirement_detail_crop_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    app:layout_constraintBottom_toBottomOf="@id/mDetQuantity"
                    app:layout_constraintStart_toEndOf="@id/mDetQuantity"
                    app:layout_constraintTop_toTopOf="@id/mDetQuantity"
                    tools:text="Basmati" />

                <TextView
                    android:id="@+id/mDetLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mDetQuantity" />

                <TextView
                    android:id="@+id/tv_requirement_detail_crop_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    app:layout_constraintBottom_toBottomOf="@id/mDetLocation"
                    app:layout_constraintStart_toEndOf="@id/mDetLocation"
                    app:layout_constraintTop_toTopOf="@id/mDetLocation"
                    tools:text="Amhara, Bihta" />

                <TextView
                    android:id="@+id/mDetDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mDetLocation" />

                <TextView
                    android:id="@+id/tv_requirement_detail_crop_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    app:layout_constraintBottom_toBottomOf="@id/mDetDesc"
                    app:layout_constraintStart_toEndOf="@id/mDetDesc"
                    app:layout_constraintTop_toTopOf="@id/mDetDesc"
                    tools:text="Amhara, Bihta" />


                <TextView
                    android:id="@+id/tv_requirement_detail_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/quantity2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mDetDesc" />

                <TextView
                    android:id="@+id/ans_detail_bid_quanity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    android:text="@string/_0_kg"
                    app:layout_constraintBottom_toBottomOf="@id/tv_requirement_detail_quantity"
                    app:layout_constraintStart_toEndOf="@id/tv_requirement_detail_quantity"
                    app:layout_constraintTop_toTopOf="@id/tv_requirement_detail_quantity" />

                <TextView
                    android:id="@+id/tv_requirement_detail_expiration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/expiration_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_requirement_detail_quantity" />


                <TextView
                    android:id="@+id/ans_detail_bid_exp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    android:text="@string/_12_4_2005"
                    app:layout_constraintBottom_toBottomOf="@id/tv_requirement_detail_expiration"
                    app:layout_constraintStart_toEndOf="@id/tv_requirement_detail_expiration"
                    app:layout_constraintTop_toTopOf="@id/tv_requirement_detail_expiration" />

                <TextView
                    android:id="@+id/tv_requirement_detail_init_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/date_of_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_requirement_detail_expiration" />


                <TextView
                    android:id="@+id/ans_detail_bid_init_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    android:text="@string/_12_4_2005"
                    app:layout_constraintBottom_toBottomOf="@id/tv_requirement_detail_init_date"
                    app:layout_constraintStart_toEndOf="@id/tv_requirement_detail_init_date"
                    app:layout_constraintTop_toTopOf="@id/tv_requirement_detail_init_date" />

                <View
                    android:id="@+id/v"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/space"
                    android:layout_marginBottom="@dimen/space"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/ans_detail_bid_init_date" />

                <TextView
                    android:id="@+id/mCurrentBid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/current_bid"
                    app:layout_constraintEnd_toStartOf="@id/tv_requirement_detail_initial_offer_price"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v" />


                <TextView
                    android:id="@+id/tv_requirement_detail_current_bid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/_1234"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toStartOf="@id/tv_requirement_detail_initial_offer_price"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mCurrentBid" />

                <TextView
                    android:id="@+id/mOfferPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/initial_offer_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/tv_requirement_detail_current_bid"
                    app:layout_constraintTop_toBottomOf="@id/v" />


                <TextView
                    android:id="@+id/tv_requirement_detail_initial_offer_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/_1234"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/tv_requirement_detail_current_bid"
                    app:layout_constraintTop_toBottomOf="@id/mOfferPrice" />


                <ProgressBar
                    android:id="@+id/pb_my_req_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_requirement_detail_my_bid_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/myBid"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_requirement_detail_current_bid"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="@id/tv_requirement_detail_current_bid"
                    app:layout_constraintTop_toBottomOf="@id/tv_requirement_detail_current_bid" />

                <TextView
                    android:id="@+id/tv_requirement_detail_my_bid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/_1234"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_requirement_detail_my_bid_text_view"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/tv_requirement_detail_my_bid_text_view"
                    app:layout_constraintTop_toTopOf="@id/tv_requirement_detail_my_bid_text_view" />


                <!--        //##Add contact-->
                <TextView
                    android:id="@+id/tv_req_details_buyer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_requirement_detail_my_bid"
                    tools:text="@tools:sample/full_names" />

                <ImageView
                    android:id="@+id/iv_req_call_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_call_black_24dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_req_details_buyer_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_req_details_buyer_name" />        <!--        Add graph-->


                <!--                <com.github.mikephil.charting.charts.LineChart--><!--                    android:id="@+id/lineChartMyBids"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="@dimen/space_220"-->
                <!--                    android:layout_marginStart="5dp"-->
                <!--                    android:layout_marginTop="10dp"-->
                <!--                    android:layout_marginEnd="5dp"-->
                <!--                    android:layout_marginBottom="10dp"-->
                <!--                    android:padding="9dp"-->
                <!--                    app:layout_constraintTop_toBottomOf="@id/tv_req_details_buyer_name" />-->

                <TextView
                    android:id="@+id/tv_view_bid_history_requirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    android:layout_marginTop="@dimen/space_2x"
                    android:layout_marginEnd="@dimen/space"
                    android:layout_marginBottom="@dimen/space"
                    android:gravity="start"
                    android:text="@string/view_bid_history"
                    android:textColor="@color/wildColor"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_req_details_buyer_name" />

                <ImageView
                    android:id="@+id/iv_dropdown_bid_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_down"
                    android:tint="@color/wildColor"
                    app:layout_constraintBottom_toBottomOf="@id/tv_view_bid_history_requirement"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_view_bid_history_requirement" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_bidHistoryMyReq"
                    style="@style/styleRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tv_view_bid_history_requirement"
                    tools:listitem="@layout/item_bid_history" />

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graphViewReq"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_250"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:padding="9dp"
                    app:layout_constraintTop_toBottomOf="@id/rv_bidHistoryMyReq" />


                <TextView
                    android:id="@+id/tvNoGraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:gravity="center"
                    android:text="@string/no_bids_founds"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/graphViewReq" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mtb_cancel_bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4x"
                    android:text="@string/cancel_bid"
                    app:backgroundTint="@color/deltaRed"
                    app:layout_constraintEnd_toStartOf="@id/mtb_Modify_bid"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNoGraph" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mtb_Modify_bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4x"
                    android:text="@string/modifyBid"
                    app:backgroundTint="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/mtb_cancel_bid"
                    app:layout_constraintTop_toBottomOf="@id/tvNoGraph" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>