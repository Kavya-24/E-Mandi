<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swl_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container_open_new_req"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.supply.MyCropBidDetails">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mLayoutReqOpen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/pb_new_req_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_new_requirement_detail_crop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Rice" />

                <TextView
                    android:id="@+id/mDetQuantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/variety"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_requirement_detail_crop_location" />


                <TextView
                    android:id="@+id/tv_new_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:maxLines="4"
                    android:text="@string/hello_world_person"
                    app:layout_constraintBottom_toBottomOf="@id/mCropDesc"
                    app:layout_constraintStart_toEndOf="@id/mCropDesc"
                    app:layout_constraintTop_toTopOf="@id/mCropDesc" />

                <TextView
                    android:id="@+id/mCropDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mDetQuantity" />


                <TextView
                    android:id="@+id/tv_new_requirement_detail_crop_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:layout_marginStart="@dimen/space"
                    android:text="@string/bamboo"
                    app:layout_constraintBottom_toBottomOf="@id/mDetQuantity"
                    app:layout_constraintStart_toEndOf="@id/mDetQuantity"
                    app:layout_constraintTop_toTopOf="@id/mDetQuantity"
                    tools:text="Basmati" />

                <TextView
                    android:id="@+id/tv_new_requirement_detail_crop_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    android:layout_marginTop="@dimen/space_half"
                    android:text="@string/asia"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_requirement_detail_crop_name"
                    tools:text="Amhara, Bihta" />

                <TextView
                    android:id="@+id/tv_new_requirement_detail_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/quantity2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_description" />

                <TextView
                    android:id="@+id/ans_detail_crop_quanity_open_req"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    android:text="@string/_0_kg"
                    app:layout_constraintBottom_toBottomOf="@id/tv_new_requirement_detail_quantity"
                    app:layout_constraintStart_toEndOf="@id/tv_new_requirement_detail_quantity"
                    app:layout_constraintTop_toTopOf="@id/tv_new_requirement_detail_quantity" />

                <TextView
                    android:id="@+id/tv_new_requirement_detail_expiration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/expiration_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_requirement_detail_quantity" />


                <TextView
                    android:id="@+id/ans_detail_crop_exp_open_req"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    android:text="@string/_12_4_2005"
                    app:layout_constraintBottom_toBottomOf="@id/tv_new_requirement_detail_expiration"
                    app:layout_constraintStart_toEndOf="@id/tv_new_requirement_detail_expiration"
                    app:layout_constraintTop_toTopOf="@id/tv_new_requirement_detail_expiration" />

                <TextView
                    android:id="@+id/tv_new_requirement_detail_init_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/date_of_start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_requirement_detail_expiration" />


                <TextView
                    android:id="@+id/ans_detail_init_date_open_req"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    android:text="@string/_12_4_2005"
                    app:layout_constraintBottom_toBottomOf="@id/tv_new_requirement_detail_init_date"
                    app:layout_constraintStart_toEndOf="@id/tv_new_requirement_detail_init_date"
                    app:layout_constraintTop_toTopOf="@id/tv_new_requirement_detail_init_date" />

                <View
                    android:id="@+id/v"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/space"
                    android:layout_marginBottom="@dimen/space"
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/ans_detail_init_date_open_req" />

                <TextView
                    android:id="@+id/mCurrentBid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/current_bid"
                    app:layout_constraintEnd_toStartOf="@id/tv_new_requirement_detail_initial_offer_price"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v" />


                <TextView
                    android:id="@+id/tv_new_requirement_detail_current_bid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/_1234"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toStartOf="@id/tv_new_requirement_detail_initial_offer_price"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mCurrentBid" />

                <TextView
                    android:id="@+id/mOfferPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/initial_offer_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/tv_new_requirement_detail_current_bid"
                    app:layout_constraintTop_toBottomOf="@id/v" />


                <TextView
                    android:id="@+id/tv_new_requirement_detail_initial_offer_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_half"
                    android:gravity="center"
                    android:text="@string/_1234"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/tv_new_requirement_detail_current_bid"
                    app:layout_constraintTop_toBottomOf="@id/mOfferPrice" />


                <!--        //##Add contact-->
                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_3x"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_requirement_detail_current_bid" />

                <TextView
                    android:id="@+id/tv_new_requirement_details_buyer_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v3"
                    tools:text="@tools:sample/full_names" />

                <ImageView
                    android:id="@+id/iv_new_requirement_call_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space"
                    android:src="@drawable/ic_call_black_24dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_new_requirement_details_buyer_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_new_requirement_details_buyer_name" />        <!--        Add graph-->



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_bidHistoryOPneReq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_view_bid_history_requirement_new"
                    tools:listitem="@layout/item_bid_history" />

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_2x"
                    app:layout_constraintTop_toBottomOf="@id/rv_bidHistoryOPneReq" />

                <TextView
                    android:id="@+id/tv_view_bid_history_requirement_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space"
                    android:layout_marginTop="@dimen/space_2x"
                    android:layout_marginEnd="@dimen/space"
                    android:layout_marginBottom="@dimen/space"
                    android:gravity="start"
                    android:text="@string/view_bid_history"
                    android:textColor="@color/wildColor"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_requirement_details_buyer_name" />

                <ImageView
                    android:id="@+id/iv_dropdown_bid_history_req_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_down"
                    android:tint="@color/wildColor"
                    app:layout_constraintBottom_toBottomOf="@id/tv_view_bid_history_requirement_new"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_view_bid_history_requirement_new" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mtb_bid_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bid"
                    app:backgroundTint="@color/deltaGreen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>