        <com.google.android.material.textfield.TextInputLayout

            android:id="@+id/tilMyBidPrice"
            style="@style/OutlinedTextBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:hint="@string/offer_price"
            android:orientation="horizontal"
            app:endIconMode="none"
            app:errorEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/crop_card">


            <EditText
                android:id="@+id/actv_my_bid_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mtb_place_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilMyBidPrice" />

