                    app:layout_constraintBottom_toBottomOf="@id/tv_requirement_quantity"
                    app:layout_constraintStart_toEndOf="@id/tv_requirement_quantity"
                    app:layout_constraintTop_toTopOf="@id/tv_requirement_quantity" />

                <TextView
