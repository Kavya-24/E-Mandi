                    android:maxLines="3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_requirement_crop_type"
                    tools:text="Bihta, Amhara" />

                <TextView
                    android:id="@+id/tv_requirement_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space"
                    android:text="@string/quantity2"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_requirement_crop_location" />

                <TextView
                    android:id="@+id/ans_crop_quanity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
