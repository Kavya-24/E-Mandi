<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/useGreen</item>
        <item name="colorPrimaryDark">@color/useDarkGreem</item>
        <item name="colorAccent">@color/wildColor</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>

        <item name="colorAccent">@color/wildColor</item>
        <item name="colorPrimary">@color/useGreen</item>
        <item name="colorPrimaryDark">@color/useDarkGreem</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="styleTextViewHeadingItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>


    </style>

    <style name="styleProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="styleRv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space</item>
        <item name="android:scrollbars">vertical</item>

    </style>

    <style name="OutlinedTextBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space</item>
        <item name="android:padding">@dimen/space</item>
    </style>

    <style name="styleTIL" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/space</item>
        <item name="android:orientation">horizontal</item>
    </style>


</resources>
